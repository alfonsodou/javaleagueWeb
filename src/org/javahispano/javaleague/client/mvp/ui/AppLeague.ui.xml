<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:app="urn:import:org.javahispano.javaleague.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:my="urn:import:org.javahispano.javaleague.client.mvp.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<b:Row>
		<b:Panel>
			<b:PanelHeader>
				<b.html:Strong>
					<ui:msg key="headerText">Liga</ui:msg>
				</b.html:Strong>
			</b:PanelHeader>
			<b:PanelBody>
				<b:Row>
					<b:Column size="MD_6">
						<b.html:Paragraph>
							<ui:msg key="leagueParagraph">Apúntante a la liga y ayúdanos a probar y
								mejorar el frameWork!
							</ui:msg>
						</b.html:Paragraph>
					</b:Column>
					<b:Column size="MD_5" offset="MD_1">
						<b:Panel>
							<b:PanelBody>
								<b:Description horizontal="true">
									<b:DescriptionTitle>
										<ui:msg key="nameLeague">Nombre</ui:msg>
									</b:DescriptionTitle>
									<b:DescriptionData ui:field="nameLeague"></b:DescriptionData>
									<b:DescriptionTitle>
										<ui:msg key="endSignIn">Fin periodo inscripción</ui:msg>
									</b:DescriptionTitle>
									<b:DescriptionData ui:field="endSignIn"></b:DescriptionData>
									<b:DescriptionTitle>
										<ui:msg key="numberTeams">Equipos inscritos</ui:msg>
									</b:DescriptionTitle>
									<b:DescriptionData ui:field="numberTeams"></b:DescriptionData>
								</b:Description>
							</b:PanelBody>
							<b:PanelFooter>
								<b.html:Paragraph alignment="CENTER">
									<b:NavbarLink ui:field="signInNavbarLink">
										<ui:msg key="signInLeague">Inscribirme!</ui:msg>
									</b:NavbarLink>
								</b.html:Paragraph>
							</b:PanelFooter>
						</b:Panel>
						<b.html:Paragraph alignment="CENTER">
							<b:Image type="ROUNDED" url="images/duke.png" />
						</b.html:Paragraph>
					</b:Column>
				</b:Row>
			</b:PanelBody>
		</b:Panel>
	</b:Row>


</ui:UiBinder> 