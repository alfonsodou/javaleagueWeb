<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:app="urn:import:org.javahispano.javaleague.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:my="urn:import:org.javahispano.javaleague.client.mvp.ui"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:style>
	.buttons button {
		margin: 0.5em;
	}
	
	.labels span {
		margin-right: 5px;
	}
	
	.push {
		padding-top: 70px;
	}
	</ui:style>

	<g:ScrollPanel>
		<b:Container>
			<g:SimplePanel ui:field="headerPanel">
				<my:AppPublicMenuBar></my:AppPublicMenuBar>
			</g:SimplePanel>

			<g:SimplePanel ui:field="centerPanel" addStyleNames="{style.push}">
				<my:AppWelcome></my:AppWelcome>
			</g:SimplePanel>

			<g:SimplePanel ui:field="footerPanel">
				<my:AppFooter></my:AppFooter>
			</g:SimplePanel>
		</b:Container>
	</g:ScrollPanel>

</ui:UiBinder>

